
{
  "manifest_version": 3,
  "name": "GazeTech - Navigation oculaire",
  "version": "1.0",
  "description": "Contr√¥lez votre navigation web par le mouvement des yeux et les clignements",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/mediapipe-facemesh.js",
        "lib/tensorflow.min.js",
        "content.js"
      ],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["models/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
